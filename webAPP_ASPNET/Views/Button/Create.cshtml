@model webAPP_ASPNET.Models.Button

<h4>Button</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Post" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BUTTONNAME" class="control-label"></label>
                <input asp-for="BUTTONNAME" class="form-control" />
                <span asp-validation-for="BUTTONNAME" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DESCRIPTION" class="control-label"></label>
                <input asp-for="DESCRIPTION" class="form-control" />
                <span asp-validation-for="DESCRIPTION" class="text-danger"></span>
            </div>
            <div class="form-group mt-1">
                <a asp-action="Index" class="btn btn-primary">
                    <i class="fa fa-arrow-circle-left" aria-hidden="true"></i>
                </a>
                <button type="submit" class="btn btn-success">
                    <i class="fa fa-check-circle" aria-hidden="true"></i> Create
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
