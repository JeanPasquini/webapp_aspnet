@model webAPP_ASPNET.Models.ButtonRelation

<h4>User: @ViewBag.Username</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Post" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IDUSER" class="form-control" />
            <div class="form-group">
                <label for="" class="control-label">Button</label>
                <select id="IDBUTTON" name="IDBUTTON" class="form-control" required asp-items="ViewBag.Buttons">
                    <option value="">Select a Button</option>
                </select>
            </div>
            <div class="form-group mt-1">
                <a asp-action="Index" class="btn btn-primary">
                    <i class="fa fa-arrow-circle-left" aria-hidden="true"></i>
                </a>
                <button type="submit" class="btn btn-success">
                    <i class="fa fa-check-circle" aria-hidden="true"></i> Create
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
